################################################################################
# ! ARGUMENTS ! #

NAME	=	hangman
CCFLAGS	=	-g -Wall -Werror -Wextra
CC		=	gcc

################################################################################
# * SRC * #

SRC = hangman.c ft_words.c ft_printer.c ./gnl/get_next_line.c \
./gnl/get_next_line_utils.c ft_utils.c\

OBJ = ${SRC:.c=.o}

################################################################################
# ? RULES ? #

all: clear progress ${NAME} hangman_logo

${NAME} : ${OBJ}	
	@${CC} ${OBJ} 


%.o : %.c
	@${CC} ${CCFLAGS} -c $< -o $@

clean:
	@rm -f ${OBJ}

fclean:	clean fclean_util
	@rm -f ${PROG}
	@rm -f ${OBJ}
	@rm -f ${NAME}

re : fclean all

.PHONY : all clean fclean all re

################################################################################
# TODO	UTILS	TODO #

fclean_util : 
	@echo "\\033[1;31m DELETED\\033[0;39m"
	@tput sgr0;
	@${foreach value, $(OBJ), echo "\\033[1;31m >> \\033[0;39m" ${value};}
	@${foreach value, $(NAME), echo "\\033[1;31m >> \\033[0;39m" ${value};} 
	clear
	@echo "⢀⣠⣾⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⠀⠀⠀⠀⣠⣤⣶⣶\n⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⠀⠀⠀⢰⣿⣿⣿⣿\n⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣧⣀⣀⣾⣿⣿⣿⣿\n⣿⣿⣿⣿⣿⡏⠉⠛⢿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⡿⣿\n⣿⣿⣿⣿⣿⣿⠀⠀⠀⠈⠛⢿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⠿⠛⠉⠁⠀⣿\n⣿⣿⣿⣿⣿⣿⣧⡀⠀⠀⠀⠀⠙⠿⠿⠿⠻⠿⠿⠟⠿⠛⠉⠀⠀⠀⠀⠀⣸⣿\n⣿⣿⣿⣿⣿⣿⣿⣷⣄⠀⡀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⢀⣴⣿⣿\n⣿⣿⣿⣿⣿⣿⣿⣿⣿⠏⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠠⣴⣿⣿⣿⣿\n⣿⣿⣿⣿⣿⣿⣿⣿⡟⠀⠀⢰⣹⡆⠀⠀⠀⠀⠀⠀⣭⣷⠀⠀⠀⠸⣿⣿⣿⣿\n⣿⣿⣿⣿⣿⣿⣿⣿⠃⠀⠀⠈⠉⠀⠀⠤⠄⠀⠀⠀⠉⠁⠀⠀⠀⠀⢿⣿⣿⣿\n⣿⣿⣿⣿⣿⣿⣿⣿⢾⣿⣷⠀⠀⠀⠀⡠⠤⢄⠀⠀⠀⠠⣿⣿⣷⠀⢸⣿⣿⣿\n⣿⣿⣿⣿⣿⣿⣿⣿⡀⠉⠀⠀⠀⠀⠀⢄⠀⢀⠀⠀⠀⠀⠉⠉⠁⠀⠀⣿⣿⣿\n⣿⣿⣿⣿⣿⣿⣿⣿⣧⠀⠀⠀⠀⠀⠀⠀⠈⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⢹⣿⣿\n⣿⣿⣿⣿⣿⣿⣿⣿⣿⠃⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⢸⣿⣿"

hangman_logo :
	@echo "__ __   ____  ____    ____  ___ ___   ____  ____\n|  |  | /    ||    \  /    ||   |   | /    ||    \\n|  |  ||  o  ||  _  ||   __|| _   _ ||  o  ||  _  |\n|  _  ||     ||  |  ||  |  ||  \_/  ||     ||  |  |\n|  |  ||  _  ||  |  ||  |_ ||   |   ||  _  ||  |  |\n|  |  ||  |  ||  |  ||     ||   |   ||  |  ||  |  |\n|__|__||__|__||__|__||___,_||___|___||__|__||__|__|"                                                            
                                                             
clear :
	@clear

progress : 
	@./progress_bar.sh